<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="FarmMetricsClient.Views.Employee.Pages.EmployeeRequestsView"
    x:DataType="pages:EmployeeRequestsViewModel"
    xmlns:pages="clr-namespace:FarmMetricsClient.ViewModels.Employee.Pages">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
            Text="{Binding StatusMessage}"
            Margin="10"
            Foreground="Blue"
            FontWeight="Bold"
            FontSize="14" />

        <ScrollViewer Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            Margin="10">
            <ItemsControl ItemsSource="{Binding Requests}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#0d1040"
                            BorderThickness="2"
                            CornerRadius="10"
                            Padding="15"
                            Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Spacing="8">
                                    <TextBlock Text="Описание заявки:"
                                        FontWeight="Bold"
                                        Foreground="#0d1040" />
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />

                                    <TextBlock Text="Тип заявки:"
                                        FontWeight="Bold"
                                        Foreground="#0d1040" />
                                    <TextBlock Text="{Binding RequestType}" TextWrapping="Wrap" />
                                    <TextBlock Text="Статус заявки:"
                                        FontWeight="Bold"
                                        Foreground="#0d1040" />
                                    <TextBlock Text="{Binding Status}"
                                        TextWrapping="Wrap"
                                        FontWeight="Bold" Foreground="#5C0000" />

                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="8">
                                    <TextBlock Text="Бренд часов:"
                                        FontWeight="Bold"
                                        Foreground="#0d1040" />
                                    <TextBlock Text="{Binding TargetBrand}" TextWrapping="Wrap" />

                                    <TextBlock Text="Модель часов:"
                                        FontWeight="Bold"
                                        Foreground="#0d1040" />
                                    <TextBlock Text="{Binding TargetWatchName}" TextWrapping="Wrap" />

                                    <TextBlock Text="Ценовой диапазон:"
                                        FontWeight="Bold"
                                        Foreground="#0d1040" />
                                    <TextBlock Text="{Binding TargetPriceRange}" TextWrapping="Wrap" />


                                </StackPanel>

                                <StackPanel Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="10"
                                    Margin="0,10,0,0">
                                    <Button Content="Обрабатывать"
                                        Background="#2d2d2d"
                                        Classes="pagesbnt"
                                        Width="120"
                                        Height="30"
                                        FontSize="12"
                                        Tag="{Binding RequestId}"
                                        Click="OnProcessClick" />

                                    <Button Content="Выполнено"
                                        Background="#2d2d2d"
                                        Classes="pagesbnt"
                                        Width="120"
                                        Height="30"
                                        FontSize="12"
                                        Tag="{Binding RequestId}"
                                        Click="OnCompleteClick" />

                                    <Button Content="Закрыть"
                                        Background="#2d2d2d"
                                        Classes="pagesbnt"
                                        Width="120"
                                        Height="30"
                                        FontSize="12"
                                        Tag="{Binding RequestId}"
                                        Click="OnCloseClick" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>