<Application xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="FarmMetricsClient.App"
    xmlns:local="using:FarmMetricsClient"
    RequestedThemeVariant="Default">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />

        <Styles>
                <Style Selector="Button.small-btn">
                    <Setter Property="FontSize" Value="12" />
                    <Setter Property="Padding" Value="5" />
                    <Setter Property="Background" Value="#D32F2F" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="CornerRadius" Value="4" />
                    <Setter Property="HorizontalAlignment" Value="Right" />
                </Style>

                <Style Selector="Button.pagesbnt">
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Padding" Value="10" />
                    <Setter Property="Background" Value="#0d1040" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="CornerRadius" Value="8" />
                </Style>

            <Style Selector="Button.primary">
                <Setter Property="Background" Value="#0d1040" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Height" Value="45" />
                <Setter Property="Width" Value="300" />
                <Setter Property="Cursor" Value="Hand" />

            </Style>

            <Style Selector="Button.pagesbnt">
                <Setter Property="Background" Value="#0d1040" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Padding" Value="10,8" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="Margin" Value="5" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Height" Value="40" />
                <Setter Property="Width" Value="200" />
                <Setter Property="Cursor" Value="Hand" />
            </Style>


            <Style Selector="TextBlock.welcome-text">
                <Setter Property="Foreground" Value="#0d1040" />
                <Setter Property="FontSize" Value="36" />
                <Setter Property="Margin" Value="0,0,0,20" />
                <Setter Property="FontWeight" Value="Bold" />

                <Setter Property="FontFamily" Value="Roboto, sans-serif" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>

            <Style Selector="TextBox.input">
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="#0d1040" />
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="Padding" Value="12,8" />
                <Setter Property="CaretBrush" Value="Black" />
                <Setter Property="SelectionBrush" Value="DarkGray" />
                <Setter Property="Width" Value="300" />
                <Setter Property="Height" Value="40" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,10" />

            </Style>
            <Style Selector="TextBox.search">
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="Background" Value="White" />
                <Setter Property="BorderBrush" Value="#0d1040" />
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="Padding" Value="12,8" />
                <Setter Property="CaretBrush" Value="Black" />
                <Setter Property="SelectionBrush" Value="DarkGray" />
                <Setter Property="Width" Value="350" />
                <Setter Property="Height" Value="35" />
                <Setter Property="Margin" Value="0,10" />

            </Style>

            <Style Selector="Button.NavButton">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Background" Value="#2A9D8F" />
                <Setter Property="BorderBrush" Value="#2A9D8F" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="Height" Value="40" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="CornerRadius" Value="5" />
                <Setter Property="Focusable" Value="True" />
                <Setter Property="Padding" Value="5,0,5,0" />
            </Style>

            <Style Selector="Button.menu-button">
                <Setter Property="Background" Value="#8d8eba" />
                <Setter Property="Foreground" Value="#0d1040" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Padding" Value="10,5" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Width" Value="180" />
                <Setter Property="Height" Value="40" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <ControlTemplate>
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                            <StackPanel Orientation="Horizontal" Margin="{TemplateBinding Padding}">
                                <ContentPresenter Content="{TemplateBinding Content}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter>
            </Style>


        </Styles>
    </Application.Styles>


</Application>